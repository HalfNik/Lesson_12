<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="32sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_navigate_to_first_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/black"
        android:text="Navigate to 1 activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_navigate_to_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/black"
        android:text="Navigate to 2 activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_navigate_to_third_activity_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/black"
        android:text="Navigate to 3 activity"
        android:textAllCaps="false" />

</LinearLayout>